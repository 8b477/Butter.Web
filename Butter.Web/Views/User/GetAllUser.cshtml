@model UserList

<div class="container mx-auto p-2">
    <h1>Liste des utilisateurs : </h1>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID :</th>
                <th>Nom :</th>
                <th>Date de naissance :</th>
                <th>Email :</th>
                <th>Genre :</th>
                <th>Ville :</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td class="m-1">@user.UserId</td>
                    <td class="m-1">@user.NickName</td>
                    <td class="m-1">@user.BirthDate.ToShortDateString()</td>
                    <td class="m-1">@user.Email</td>
                    <td class="m-1">@user.Genre</td>
                    <td class="m-1">@user.Town</td>
                    <td class="m-1">
                        
                        <div class="btn-group d-flex align-content-center" role="group" aria-label="Basic mixed styles example">

                    <button class="btn btn-light border border-primary">
                        <a class="link-body-emphasis text-uppercase text-decoration-none" asp-controller="User" asp-action="GetUserById" asp-route-userId="@user.UserId">🔍 Détails</a>
                    </button>


                    <button class="btn btn-light border border-success">
                        <a class="link-secondary text-uppercase text-decoration-none" asp-controller="User" asp-action="UpdateUser" asp-route-userId="@user.UserId">♻️ Update</a>
                    </button>


                                        <button class="btn btn-danger border border-warning">
                        <a class="link-dark link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover text-uppercase text-decoration-none" asp-controller="User" asp-action="DeleteUser" asp-route-userId="@user.UserId">🗑️ Delete</a>
                    </button>

                    </div>

                    </td>  
                </tr>
            }
        </tbody>
    </table>

    <div class="d-grid gap-2">
        <button class="btn btn-info border border-primary" type="button">
            <a class="link-light text-uppercase text-decoration-none" asp-controller="User" asp-action="CreateUser">➕ Ajouter</a>
        </button>
    </div>

</div>




